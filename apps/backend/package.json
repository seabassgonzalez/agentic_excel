{
  "name": "@agentic-excel/backend",
  "version": "1.0.0",
  "description": "Backend API for Agentic Excel",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.1",
    "@neondatabase/serverless": "^0.9.3",
    "ai": "^3.1.0",
    "drizzle-orm": "^0.30.10",
    "hono": "^4.3.0",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "drizzle-kit": "^0.21.2",
    "eslint": "^8.57.0",
    "tsup": "^8.0.2",
    "tsx": "^4.10.5",
    "typescript": "^5.3.3"
  }
}
